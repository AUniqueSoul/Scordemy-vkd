<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <TextView
                android:id="@+id/question_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:gravity="center"

                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="22sp" />


        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/question_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/avenir_next_demi"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="This is a question "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />
                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/quizImg"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@color/colorAccent"
                    />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >    <LinearLayout
    android:id="@+id/answer_lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@drawable/bg_white"
    android:padding="8dp">


    <TextView
        android:id="@+id/answer1"
        android:layout_width="0dp"
        android:layout_weight=".7"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:gravity="center|left"
        android:padding="8dp"
        android:fontFamily="@font/poppins"
        android:text="Option A"
        android:textColor="@color/black"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/answer1txt"
        android:layout_width="0dp"
        android:layout_weight=".3"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:gravity="center|left"
        android:padding="8dp"
        android:text=""
        android:visibility="gone"
        android:textColor="@color/colorWhite"
        android:textSize="10sp"
        android:fontFamily="@font/poppins"
        />
</LinearLayout>
    <ImageView
        android:id="@+id/imgOption1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        />

</LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:id="@+id/answer_lay2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:background="@drawable/bg_white"
                        android:padding="8dp">


                        <TextView
                            android:id="@+id/answer2"
                            android:layout_width="0dp"
                            android:layout_weight=".7"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:gravity="center|left"
                            android:padding="8dp"
                            android:text="Option B"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:fontFamily="@font/poppins"
                            />
                        <TextView
                            android:id="@+id/answer2txt"
                            android:layout_width="0dp"
                            android:layout_weight=".3"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:gravity="center|left"
                            android:padding="8dp"
                            android:text=""
                            android:visibility="gone"
                            android:textColor="@color/colorWhite"
                            android:textSize="10sp"
                            android:fontFamily="@font/poppins"
                            />

                    </LinearLayout>
                    <ImageView
                        android:id="@+id/imgOption2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:id="@+id/answer_3lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:background="@drawable/bg_white"
                        android:padding="8dp">


                        <TextView
                            android:id="@+id/answer3"
                            android:layout_width="0dp"
                            android:layout_weight=".7"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:gravity="center|left"
                            android:padding="8dp"
                            android:text="Option C"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:fontFamily="@font/poppins"
                            />
                        <TextView
                            android:id="@+id/answer3txt"
                            android:layout_width="0dp"
                            android:layout_weight=".3"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:gravity="center|left"
                            android:padding="8dp"
                            android:text=""
                            android:visibility="gone"
                            android:textColor="@color/colorWhite"
                            android:textSize="10sp"
                            android:fontFamily="@font/poppins"
                            />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgOption3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:id="@+id/answer_4lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:background="@drawable/bg_white"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/answer4"
                            android:layout_width="0dp"
                            android:layout_weight=".7"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:gravity="center|left"
                            android:padding="8dp"
                            android:text="Option D"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:fontFamily="@font/poppins"
                            />
                        <TextView
                            android:id="@+id/answer4txt"
                            android:layout_width="0dp"
                            android:layout_weight=".3"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:gravity="center|left"
                            android:padding="8dp"
                            android:text=""
                            android:visibility="gone"
                            android:textColor="@color/colorWhite"
                            android:textSize="10sp"
                            android:fontFamily="@font/poppins"
                            />

                    </LinearLayout>
                    <ImageView
                        android:id="@+id/imgOption4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        />

                </LinearLayout>



                <RelativeLayout
                    android:id="@+id/rl_solution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorGreenLight"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/solution"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/solution"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12ssp" />


                    <TextView
                        android:id="@+id/solution_txt"
                        android:layout_below="@id/solution"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/solution"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12ssp" />

                    <ImageView
                        android:id="@+id/solution_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/solution_txt"
                        android:layout_margin="@dimen/_8sdp" />


                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
