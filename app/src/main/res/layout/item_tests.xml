<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10ssp"
        android:layout_marginBottom="@dimen/_10ssp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/blog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/_15ssp"
            android:layout_marginTop="@dimen/_70sdp"
            android:layout_marginEnd="@dimen/_15ssp"
            android:layout_marginBottom="@dimen/_10ssp"
            app:cardCornerRadius="25dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_6sdp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/tvTotalTest"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@color/colorHomeBg"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_10sdp"
                        android:text="01" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTestTittle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins"
                        android:paddingTop="@dimen/_30ssp"
                        android:singleLine="true"
                        android:text="@string/live"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvTestCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins"
                        android:singleLine="true"
                        android:text="@string/test_s"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvExplore"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:fontFamily="@font/poppins_light"
                        android:singleLine="true"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingEnd="@dimen/_15sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_12sdp"
                        android:background="@drawable/bg_button"
                        android:text="@string/explore_go"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:foreground="?attr/selectableItemBackground"
            android:id="@+id/cvImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginStart="@dimen/_40ssp"
            android:layout_marginEnd="@dimen/_40ssp"
            android:background="@drawable/bg_curve"
            app:cardCornerRadius="25dp"
            app:cardElevation="6dp">

            <ImageView
                android:id="@+id/img_test"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_curve" />
        </androidx.cardview.widget.CardView>


    </FrameLayout>


</RelativeLayout>




