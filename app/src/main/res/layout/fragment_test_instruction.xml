<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_curve"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_20sdp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"
                android:padding="@dimen/_10sdp"
                android:id="@+id/ivClose"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_gravity="bottom"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_140sdp"
                    android:src="@drawable/checklist"
                    android:contentDescription="@string/todo" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="@dimen/_60ssp"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_gravity="bottom"
                    android:src="@drawable/tree"
                    android:contentDescription="@string/todo" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:padding="@dimen/_10ssp"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5ssp">
                    <TextView
                        android:id="@+id/tvTitle"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:text="@string/know_your_standings_in_the_race"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12ssp"/>
                </LinearLayout>



                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/tvQuestions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins"
                            android:text="@string/questions"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_10ssp" />

                        <TextView
                            android:id="@+id/tvMarks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins"
                            android:text="@string/marks"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_10ssp" />

                        <TextView
                            android:id="@+id/tvDuration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins"
                            android:text="@string/min"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_10ssp" />
                    </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/instructions_marks_and_duration"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                />
            <WebView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/webInstruction"
                android:padding="15dp"
                />
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/start_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:textColor="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:layout_margin="@dimen/_15sdp"
        android:background="@drawable/bg_button"
        android:text="Start Test"/>

</RelativeLayout>