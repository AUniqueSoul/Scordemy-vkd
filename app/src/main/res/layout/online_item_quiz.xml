<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E7E7FA"
            android:visibility="gone"
            android:padding="@dimen/_10sdp"
            android:text="Review Later" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:backgroundTint="@color/colorPrimary"
            android:elevation="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_18sdp">

            <TextView
                android:id="@+id/questionnumber"
                android:padding="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/colorWhite"
                android:text="@string/question_status" />

        </com.google.android.material.card.MaterialCardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:paddingBottom="200dp"
                android:orientation="vertical">


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/question_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/avenir_next_demi"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:text="This is a question This is a question "
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp" />
                        <ImageView
                            android:layout_width="match_parent"
                            android:id="@+id/quizImg"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:visibility="gone"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:src="@color/colorAccent"
                            />




                        <LinearLayout
                            android:id="@+id/answer_lay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="12dp"
                            android:background="@drawable/bg_white"
                            android:orientation="vertical"
                            android:padding="8dp">


                            <TextView
                                android:id="@+id/answer1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:gravity="center|left"
                                android:padding="8dp"
                                android:fontFamily="@font/poppins"
                                android:text="Option A"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <ImageView
                                android:id="@+id/imgOption1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                />

                            <TextView
                                android:id="@+id/answer1txt"
                                android:layout_width="0dp"
                                android:layout_weight=".3"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:gravity="center|left"
                                android:padding="8dp"
                                android:text=""
                                android:visibility="gone"
                                android:textColor="@color/colorWhite"
                                android:textSize="10sp"
                                android:fontFamily="@font/poppins"
                                />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/answer_lay2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="12dp"
                            android:orientation="vertical"
                            android:background="@drawable/bg_white"
                            android:padding="8dp">


                            <TextView
                                android:id="@+id/answer2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:gravity="center|left"
                                android:padding="8dp"
                                android:text="Option B"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:fontFamily="@font/poppins"
                                />

                            <ImageView
                                android:id="@+id/imgOption2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                />

                            <TextView
                                android:id="@+id/answer2txt"
                                android:layout_width="0dp"
                                android:layout_weight=".3"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:gravity="center|left"
                                android:padding="8dp"
                                android:text=""
                                android:visibility="gone"
                                android:textColor="@color/colorWhite"
                                android:textSize="10sp"
                                android:fontFamily="@font/poppins"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/answer_3lay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="12dp"
                            android:orientation="vertical"
                            android:background="@drawable/bg_white"
                            android:padding="8dp">


                            <TextView
                                android:id="@+id/answer3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:gravity="center|left"
                                android:padding="8dp"
                                android:text="Option C"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:fontFamily="@font/poppins"
                                />

                            <ImageView
                                android:id="@+id/imgOption3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                />

                            <TextView
                                android:id="@+id/answer3txt"
                                android:layout_width="0dp"
                                android:layout_weight=".3"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:gravity="center|left"
                                android:padding="8dp"
                                android:text=""
                                android:visibility="gone"
                                android:textColor="@color/colorWhite"
                                android:textSize="10sp"
                                android:fontFamily="@font/poppins"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/answer_4lay"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="12dp"
                            android:background="@drawable/bg_white"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/answer4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:gravity="center|left"
                                android:padding="8dp"
                                android:text="Option D"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:fontFamily="@font/poppins"
                                />
                            <ImageView
                                android:id="@+id/imgOption4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                />

                            <TextView
                                android:id="@+id/answer4txt"
                                android:layout_width="0dp"
                                android:layout_weight=".3"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:gravity="center|left"
                                android:padding="8dp"
                                android:text=""
                                android:visibility="gone"
                                android:textColor="@color/colorWhite"
                                android:textSize="10sp"
                                android:fontFamily="@font/poppins"
                                />

                        </LinearLayout>


                    </LinearLayout>

                </ScrollView>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>




</LinearLayout>